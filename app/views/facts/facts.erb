<h2>All Facts</h2>
<% username = current_user.username  %>
<% facts = current_user.facts %>

<% Fact.all.each do |f| %>
<% edit_path = "/#{username}/facts/#{f.id}/edit" %>
  <ul>
    <li>
      <a href="/facts/<%= f.id %>"><%= f.content %></a>
      <% if facts.find_by_id(f.id) %>
        <form action=<%= edit_path %>>
          <input type="submit" value="Edit" />
        </form>
      <% end %>
    </li>
  </ul>
<% end %>
